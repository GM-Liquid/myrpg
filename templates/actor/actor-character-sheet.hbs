<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="features">{{localize "MY_RPG.SheetLabels.Features"}}</a>
        <a class="item" data-tab="spells">{{localize "MY_RPG.SheetLabels.Spells"}}</a>
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">

        {{!-- Основная вкладка (Features) – содержит header, характеристики и навыки --}}
        <div class="tab features" data-group="primary" data-tab="features">
            {{!-- Header теперь является частью вкладки Features --}}
            <header class="sheet-header">
                <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100" />
                <div class="header-fields">
                    <h1 class="charname">
                        <input name="name" type="text" value="{{actor.name}}" placeholder="Name" />
                    </h1>
                    <!-- ЕДИНАЯ СЕТКА НА 6 ЯЧЕЕК -->
                    <div class="resources grid grid-3col">
                        <!-- 1) ОЗ (текущ / рана / макс) -->
                        <div class="resource flex-group-center">
                            <label class="resource-label">{{localize "MY_RPG.Health.Label"}}</label>
                            <div class="resource-content flexcol">
                                <div class="sub-labels flexrow flex-group-center">
                                    <div class="sub-label">{{localize "MY_RPG.Health.SubCurrent"}}</div>
                                    <div class="sub-label">{{localize "MY_RPG.Health.SubDamage"}}</div>
                                    <div class="sub-label">{{localize "MY_RPG.Health.SubMax"}}</div>
                                </div>
                                <div class="flexrow flex-group-center">
                                    <!-- Редактируемое поле: текущее ОЗ -->
                                    <input type="number"
                                           name="system.health.value"
                                           value="{{system.health.value}}"
                                           step="1"
                                           inputmode="numeric"
                                           pattern="\d+"
                                           style="width: 33%;" />
                                    <!-- Вычисляемое поле: рана -->
                                    <input type="number"
                                           name="system.health.damage"
                                           value="{{system.health.damage}}"
                                           step="1"
                                           inputmode="numeric"
                                           readonly tabindex="-1"
                                           style="width: 33%;" />
                                    <!-- Вычисляемое поле: макс. ОЗ -->
                                    <input type="number"
                                           name="system.health.max"
                                           value="{{system.health.max}}"
                                           step="1"
                                           inputmode="numeric"
                                           readonly tabindex="-1"
                                           style="width: 33%;" />
                                </div>
                            </div>
                        </div>
                        <!-- 2) Временные ОЗ (редактируемое) -->
                        <div class="resource flex-group-center">
                            <label class="resource-label">{{localize "MY_RPG.Health.Temp"}}</label>
                            <div class="resource-content flexrow flex-center">
                                <input type="number"
                                       name="system.tempHealth.value"
                                       value="{{system.tempHealth.value}}"
                                       step="1"
                                       inputmode="numeric"
                                       pattern="\d+" />
                            </div>
                        </div>
                        <!-- 3) Поток (вкладка Features) -->
                        <div class="resource flex-group-center">
                            <label class="resource-label">{{localize "MY_RPG.Flux.Label"}}</label>
                            <div class="resource-content flexrow flex-center flex-between">
                                <!-- Вычисляемое поле: Поток -->
                                <input type="number"
                                       name="system.flux.value"
                                       value="{{system.flux.value}}"
                                       step="1"
                                       inputmode="numeric"
                                       readonly tabindex="-1" />
                                <!-- Редактируемое поле: Бонус потока (оставляем name для сохранения) -->
                                <input type="number"
                                       name="system.flux.bonus"
                                       value="{{system.flux.bonus}}"
                                       step="1"
                                       inputmode="numeric"
                                       pattern="\d+"
                                       placeholder="Бонус" />
                            </div>
                        </div>
                        <!-- 4) Класс Доспеха (бонус / итог) -->
                        <div class="resource flex-group-center">
                            <label class="resource-label">{{localize "MY_RPG.Armor.Label"}}</label>
                            <div class="resource-content flexcol">
                                <div class="sub-labels flexrow flex-group-center">
                                    <div class="sub-label">{{localize "MY_RPG.Armor.BonusLabel"}}</div>
                                    <div class="sub-label">{{localize "MY_RPG.Armor.ResultLabel"}}</div>
                                </div>
                                <div class="flexrow flex-group-center">
                                    <!-- Редактируемое поле: бонус доспеха -->
                                    <input type="number"
                                           name="system.armor.bonus"
                                           value="{{system.armor.bonus}}"
                                           step="1"
                                           inputmode="numeric"
                                           pattern="\d+"
                                           style="width: 50%;" />
                                    <!-- Вычисляемое поле: итог -->
                                    <input type="number"
                                           name="system.armor.result"
                                           value="{{system.armor.result}}"
                                           step="1"
                                           inputmode="numeric"
                                           readonly tabindex="-1"
                                           style="width: 50%;" />
                                </div>
                            </div>
                        </div>
                        <!-- 5) Напряжённость (текущее / макс) -->
                        <div class="resource flex-group-center">
                            <label class="resource-label">{{localize "MY_RPG.Tension.Label"}}</label>
                            <div class="resource-content flexcol">
                                <div class="sub-labels flexrow flex-group-center">
                                    <div class="sub-label">{{localize "MY_RPG.Tension.ValueLabel"}}</div>
                                    <div class="sub-label">{{localize "MY_RPG.Tension.MaxLabel"}}</div>
                                </div>
                                <div class="flexrow flex-group-center">
                                    <!-- Редактируемое поле: текущее напряжение -->
                                    <input type="number"
                                           name="system.tension.value"
                                           value="{{system.tension.value}}"
                                           step="1"
                                           inputmode="numeric"
                                           pattern="\d+"
                                           style="width: 50%;" />
                                    <!-- Вычисляемое поле: макс. напряжение -->
                                    <input type="number"
                                           name="system.tension.max"
                                           value="{{system.tension.max}}"
                                           step="1"
                                           inputmode="numeric"
                                           readonly tabindex="-1"
                                           style="width: 50%;" />
                                </div>
                            </div>
                        </div>
                        <!-- 6) Стойкость (бонус / итог) -->
                        <div class="resource flex-group-center">
                            <label class="resource-label">{{localize "MY_RPG.Steadfast.Label"}}</label>
                            <div class="resource-content flexcol">
                                <div class="sub-labels flexrow flex-group-center">
                                    <div class="sub-label">{{localize "MY_RPG.Steadfast.BonusLabel"}}</div>
                                    <div class="sub-label">{{localize "MY_RPG.Steadfast.ResultLabel"}}</div>
                                </div>
                                <div class="flexrow flex-group-center">
                                    <!-- Редактируемое поле: бонус стойкости -->
                                    <input type="number"
                                           name="system.steadfast.bonus"
                                           value="{{system.steadfast.bonus}}"
                                           step="1"
                                           inputmode="numeric"
                                           pattern="\d+"
                                           style="width: 50%;" />
                                    <!-- Вычисляемое поле: итог стойкости -->
                                    <input type="number"
                                           name="system.steadfast.result"
                                           value="{{system.steadfast.result}}"
                                           step="1"
                                           inputmode="numeric"
                                           readonly tabindex="-1"
                                           style="width: 50%;" />
                                </div>
                            </div>
                        </div>
                    </div> <!-- .resources.grid-3col -->
                </div> <!-- .header-fields -->
            </header>

            <!-- Основное содержимое вкладки Features – характеристики и навыки -->
            <section class="grid grid-2col">
                <aside class="sidebar">
                    <div class="abilities flexcol">
                        {{#each system.abilities as |ability key|}}
                        <div class="ability flexrow flex-group-center">
                            <label for="system.abilities.{{key}}.value"
                                   class="resource-label rollable flexlarge align-left"
                                   data-roll="d20+@abilities.{{key}}.mod"
                                   data-label="{{ability.label}}">
                                {{ability.label}}
                            </label>
                            <input type="number"
                                   name="system.abilities.{{key}}.value"
                                   value="{{ability.value}}"
                                   step="1"
                                   inputmode="numeric"
                                   pattern="\d+" />
                        </div>
                        {{/each}}
                    </div>
                </aside>
                <aside class="sidebar2">
                    <div class="skills flexcol">
                        {{#each system.skills as |skill key|}}
                        <div class="skill flexrow flex-group-center">
                            <label for="system.skills.{{key}}.value"
                                   class="resource-label rollable"
                                   data-roll="d20+@{{key}}.value"
                                   data-label="{{localize (concat 'MY_RPG.Skill.' (toPascalCase key))}}">
                                {{localize (concat "MY_RPG.Skill." (toPascalCase key))}}
                            </label>
                            <input type="number"
                                   name="system.skills.{{key}}.value"
                                   value="{{skill.value}}"
                                   step="1"
                                   inputmode="numeric"
                                   pattern="\d+" />
                        </div>
                        {{/each}}
                    </div>
                </aside>
            </section>
        </div>

        {{!-- Вкладка "Заклинания" – отображается только поток и список заклинаний --}}
        <div class="tab spells" data-group="primary" data-tab="spells">
            <section class="flux-section">
                <!-- Вкладка Spells: Поток -->
                <div class="resource flex-group-center">
                    <label for="system.flux.value" class="resource-label">{{localize "MY_RPG.Flux.Label"}}</label>
                    <div class="resource-content flexrow flex-center flex-between">
                        <input type="number"
                               name="system.flux.value"
                               value="{{system.flux.value}}"
                               step="1"
                               inputmode="numeric"
                               readonly tabindex="-1" />
                        <!-- Изменённое поле бонуса: убрали name, добавили класс для синхронизации -->
                        <input type="number"
                               value="{{system.flux.bonus}}"
                               step="1"
                               inputmode="numeric"
                               pattern="\d+"
                               placeholder="Бонус"
                               class="flux-bonus-sync" />
                    </div>
                </div>
            </section>
            <section class="spells-list-section">
                <h2>{{localize "MY_RPG.Item.Spell.SpellLVL"}}</h2>
                <div class="spells-list">
                    {{#each items}}
                    {{#if (eq type "spell")}}
                    <div class="spell">
                        <h3>{{name}}</h3>
                        <p>{{system.description}}</p>
                    </div>
                    {{/if}}
                    {{/each}}
                </div>
            </section>
        </div>

    </section>
</form>