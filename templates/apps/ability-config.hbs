<form>
    <div class="form-group">
        <label>Название</label>
        <input type="text" name="name" value="{{ability.name}}" />
    </div>

    <div class="form-group">
        <label>Эффект</label>
        <textarea name="effect" rows="4">{{ability.effect}}</textarea>
    </div>

    <div class="form-group">
        <label>Стоимость</label>
        <input type="number" name="cost" value="{{ability.cost}}" />
    </div>
</form>