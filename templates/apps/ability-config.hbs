<form>
    <div class="form-group">
        <label>{{localize "MY_RPG.AbilitiesTable.Name"}}</label>
        <input type="text" name="name" value="{{ability.name}}" />
    </div>

    <div class="form-group">
        <label>{{localize "MY_RPG.AbilitiesTable.Effect"}}</label>
        <textarea name="effect" rows="4">{{ability.effect}}</textarea>
    </div>

    <div class="form-group">
        <label>{{localize "MY_RPG.AbilitiesTable.Cost"}}</label>
        <input type="number" name="cost" value="{{ability.cost}}" />
    </div>

